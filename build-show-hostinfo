#!/bin/bash
. $(dirname $0)/build-common

if [ "$1" = "" ]; then
	echo "Usage: $(basename $0) <system>"
	exit
fi

GetHostEnvironment $1 || exit
GetDistroEnvironment $DIST || exit

cat <<EOD
SYSNAME:   $SYSNAME
HOST:      $HOST
HOSTARCH:  $HOSTARCH
ARCH:      $ARCH
ARCHS:     $ARCHS
BASEDIR:   $BASEDIR
BUILDING:  $BUILDING
BUILDDIR:  $BUILDDIR
CHROOTCMD: $CHROOTCMD
CHROOTS:   $(QueryChroots $HOST)
SRCDIR:    $SRCDIR
EOD
if ${VERBOSE}; then
	echo "--- Cleanup Script ---"
	echo "$(EmitDoClean)"
	echo "--- Build Script ---"
	echo "$(EmitDoBuild 1)"
fi

exit 0
