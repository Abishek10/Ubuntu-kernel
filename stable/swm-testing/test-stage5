#!/bin/sh

set -e
set +x

echo "  Stage 5:"
echo "    . Adjust the promote-to-proposed timestamp."

# Set the promote-to-proposed task as completed on the various
# tracking bugs.
#
./tracking-bugs-modify mods-stage5

# The sru-workflow-manager should see that we are past the 1 hr
# grace perios and should set the next set of tasks to "Confirmed".
#
../swm --staging --dryrun-email --verbose > 5.log 2>&1

./tracking-bugs-snapshot snap-stage5
./tracking-bugs-verify ref-tbs-stage5 snap-stage5
