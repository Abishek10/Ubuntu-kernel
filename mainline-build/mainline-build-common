# Look for file specific patches.
adhoc="$here/adhoc"
grep TRIGGER "$adhoc"/* | \
while read patch sum file
do
	patch=${patch%:TRIGGER}
	csum=`md5sum "$file" | awk '{print $1}'`

	echo "*** checking $patch ($file $sum $csum) ..."
	if [ "$sum" = "$csum" ]; then
		echo "*** applying $patch ..."
		git am -C1 "$patch"
	fi
done
