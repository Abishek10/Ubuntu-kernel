Index: linux-2.6.24.3-rt3/include/linux/console.h
===================================================================
--- linux-2.6.24.3-rt3.orig/include/linux/console.h	2008-02-26 23:30:47.000000000 -0500
+++ linux-2.6.24.3-rt3/include/linux/console.h	2008-02-26 23:31:28.000000000 -0500
@@ -92,6 +92,17 @@ void give_up_console(const struct consw 
 #define CON_ENABLED	(4)
 #define CON_BOOT	(8)
 #define CON_ANYTIME	(16) /* Safe to call when cpu is offline */
+#define CON_ATOMIC	(32) /* Safe to call in PREEMPT_RT atomic */
+
+#ifdef CONFIG_PREEMPT_RT
+# define console_atomic_safe(con)		\
+	(((con)->flags & CON_ATOMIC) ||		\
+	 (!in_atomic() && !irqs_disabled()) ||	\
+	 (system_state != SYSTEM_RUNNING) ||	\
+	 oops_in_progress)
+#else
+# define console_atomic_safe(con) (1)
+#endif
 
