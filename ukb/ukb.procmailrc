CORRECTHOME=/home/work/kernel-testing/ukb/Maildir
MAILDIR=$CORRECTHOME/
PMDIR=/home/work/kernel-testing/ukb/procmail.log
LOGFILE=$PMDIR/log
VERBOSE=on


:0 fw
* ^Subject:.*linux.* .* uploaded.*
{
    :0 hbW:
    | /home/work/kernel-testing/ukb/ukb-mail-handler >> /home/work/kernel-testing/ukb/ukb-mail-handler.log
}

:0 fw
* ^Subject:.*Mainline Build.*
* ^From:.*Mainline Builds <kernel-team@lists.ubuntu.com.*|\
  ^From:.*Brad Figg <brad.figg@canonical.com.*
{
    :0 hbW:
    | /home/work/kernel-testing/ukb/ukb-mail-handler >> /home/work/kernel-testing/ukb/ukb-mail-handler.log
}

:0 fw
* ^Subject:.*Kernel Test Request.*
* ^From:.*canonical.com.*
{
    :0 hbW:
    | /home/work/kernel-testing/ukb/ukb-mail-handler >> /home/work/kernel-testing/ukb/ukb-mail-handler.log
}

