#!/bin/bash
#
# devel-config-summary -- generate a configuration settings summary for UDS
#
P="$0"

here=`dirname $0`
case "$here" in
/*) ;;
*)  here="`pwd`/$here" ;;
esac

format="wiki"
case "$1" in
--html)		format="html"; shift ;;
esac

if [ "$#" -ne 2 ]; then
	echo "Usage: $P <current series> <next series>" 1>&2
	exit 1
fi
current="$1"
next="$2"

there="$next"
case "$there" in
/*) ;;
*)  there="`pwd`/$there" ;;
esac


# XXX: in theory at least this should be tree specific.
"$here/lib-config/devel-config-info" "$there/debian.master/config/annotations" "$current"
"$here/lib-config/devel-config-info" "$there/debian.master/config/annotations" "$next"

(
	cd "$next" || exit 1

	fakeroot debian/rules genconfigs >/dev/null 2>&1
	fakeroot debian/rules genportsconfigs >/dev/null 2>&1

	rm -f CONFIGS/ppc64-*
)

"$here/devel-config-summary-report" "$format" "$current" "$next"
