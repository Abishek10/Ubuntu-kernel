def step_init():
	job.next_step([step_test])
	print "build"
	print "boot"
	job.quit()

def testme(n):
	print "testme: %d" % n
	os.system("sleep %d" % n)
	print "testme: %d end" % n

def step_test():
	job.next_step([step_test2, 10])
	print "test"
	job.parallel(
		[job.noop, "direct call"],
		[testme, 5],
		[testme, 2]
	)

def step_test2(n):
	print "test2 - %d" % n
